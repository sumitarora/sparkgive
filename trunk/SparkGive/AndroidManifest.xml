<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sparkgive"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.maps" />
        <activity
            android:name="com.sparkgive.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sparkgive.ThankYouActivity"
            android:label="@string/title_activity_thank_you" >
        </activity>
        <activity
            android:name="com.sparkgive.RedeemActivity"
            android:label="@string/title_activity_redeem" >
        </activity>
        <activity
            android:name="com.sparkgive.ShareActivity"
            android:label="@string/title_activity_share" >
        </activity>
        <activity
            android:name="com.sparkgive.CampaignsActivity"
            android:label="@string/title_activity_campaigns" >
        </activity>
        <activity
            android:name="com.sparkgive.MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name="com.sparkgive.PublicCardsActivity"
            android:label="@string/title_activity_publiccards" >
        </activity>
        <activity
            android:name="com.sparkgive.TestSearchActivity"
            android:label="@string/title_activity_publiccards" >
        </activity>
        
        <activity android:name=".SearchableActivity" >
        <intent-filter>
            <action android:name="android.intent.action.SEARCH" />
        </intent-filter>
        <meta-data android:name="android.app.searchable"
                   android:resource="@xml/searchable"/>
    	</activity>
    </application>

</manifest>