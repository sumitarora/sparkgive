<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CampaignsActivity" >
	
   <LinearLayout
       android:id="@+id/box1"
       android:layout_height="wrap_content"
       android:layout_width="fill_parent" 
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:paddingLeft="25dp">
   		<ImageView
	        android:id="@+id/profile"
	        android:layout_width="120dp"
	        android:layout_height="120dp"
	        android:padding="5dp"
	        android:src="@drawable/profile" />
   		<LinearLayout android:orientation="vertical"
   		    android:layout_width="fill_parent"
   		    android:layout_height="wrap_content"
   		    android:paddingLeft="25dp"
   		    android:paddingRight="25dp"
   		    android:paddingTop="10dp"
   		    android:paddingBottom="10dp">
   		    <TextView 
   		        android:layout_width="wrap_content"
   		        android:layout_height="wrap_content"
   		        android:text="Give chartiy #sparkgive "/>
   		    <EditText 
   		        android:layout_height="wrap_content"
   		        android:layout_width="fill_parent"
   		        android:id="@+id/txtTweet2"/>
   		    <Button android:text="Share"
   		        android:id="@+id/btnTweet2"
   		        android:layout_width="wrap_content"
   		        android:layout_height="wrap_content"/>
   		</LinearLayout>   
   </LinearLayout>
   
   <LinearLayout
       android:id="@+id/box2"
       android:layout_below="@+id/box1"
       android:layout_height="wrap_content"
       android:layout_width="fill_parent" 
       android:orientation="horizontal"
       android:gravity="center_horizontal"
       android:paddingLeft="25dp"
       android:paddingRight="25dp"
       android:paddingTop="10dp"
       android:paddingBottom="10dp">

		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:src="@drawable/peace" />

		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:src="@drawable/pinkribbon" />

		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:src="@drawable/happy" />

		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:src="@drawable/environmental" />

   </LinearLayout>
   	
   <LinearLayout
       android:id="@+id/box3"
       android:layout_below="@+id/box2"
       android:layout_height="wrap_content"
       android:layout_width="fill_parent" 
       android:orientation="vertical"
       android:gravity="center_horizontal"
       android:paddingLeft="25dp"
       android:paddingRight="25dp"
       android:paddingTop="10dp"
       android:paddingBottom="10dp">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="My Campaigns.." />
       
       <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:src="@drawable/foodbankcanada" />
       
      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:src="@drawable/sickkids" />

   </LinearLayout>
		
   <RelativeLayout
        android:id="@+id/footer_view"
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:background="@drawable/footer_bar"
        android:layout_alignParentBottom="true">
    
    <ImageView
        android:id="@+id/profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="15dp"
        android:src="@drawable/profile_icon" />
    
    <ImageView
        android:id="@+id/Maps_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:layout_toRightOf ="@id/profile"
        android:src="@drawable/maps_icon" />
    
    <ImageView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/list_icon" />
    
    <ImageView
        android:id="@+id/public_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:layout_toLeftOf = "@id/list"
        android:src="@drawable/add_icon" />
    
    <ImageView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/list_icon" />
    
	</RelativeLayout>


</RelativeLayout>